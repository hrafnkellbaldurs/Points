<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:title="Vibrate on touch"
        android:summary="Do vibrate when pushing a button"
        android:key="vibrate"
        android:defaultValue="false">
    </CheckBoxPreference>
    <ListPreference
        android:title="Size"
        android:summary="Size of board"
        android:key="gridSize"
        android:defaultValue="Green"
        android:entries="@array/listGridSize"
        android:entryValues="@array/listGridValues">
    </ListPreference>
</PreferenceScreen>